{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": ".",
    "outDir": "temp",
    "tsBuildInfoFile": "temp/tsconfig.tsbuildinfo",
    "noEmit": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "stripInternal": true,
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}
